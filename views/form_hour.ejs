<form action="/schedules/addBusyHour" method="POST" class="form-group" id="formBusyHour">
<div class="row d-flex p-2">
    <div class="form-group" class="col-sm-3">
      <label>Day:</label>
          <select onclick="updateDay()" id="controlSelectDay" name="day" multiple class="form-control" >
          <option value="Monday">Mon</option>
          <option value="Tuesday">Tue</option>
          <option value="Wednesday">Wed</option>
          <option value="Thursday">Thu</option>
          <option value="Friday">Fri</option>
          <option value="Saturday">Sat</option>
          <option value="Sunday">Sun</option>
          </select>
    </div>
    <div class="form-group" class="col-sm-3">
      <label>Start hour:</label>
      <select onclick="updateStartHour()" id="controlSelectS" name="start" multiple class="form-control" >
      <% hours.forEach( (item) => { %>
      <option value=<%- "'" + item + "'" %>> <%= item %></option>
      <% }) %>
      </select>
    </div>
    <div class="form-group" class="col-sm-3">
      <label>End hour:</label>
      <select onclick="updateEndHour()" id="controlSelectE" name="end" multiple class="form-control" >
      <% hours.forEach( (item) => { %>
      <option><%= item %></option>
      <% }) %>
      })
      </select>
    </div>
</div>
<div class="row">
    <input type="name" name="user" class="form-control" aria-describedby="emailHelp" placeholder="Which user">
</div>
<div class="row" style="margin-top: 20px">
    <button type="submit" class="btn btn-primary">Submit</button>
</div>
</form>